<% flash.each do |key, value| %>
    <div class="alert alert-<%= key != "success" ? "success" : key %>"><%= value %></div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Ingresar</h1>
      <%= form_tag controller: :login, action: :create do %>
        <div class="form-group">
          <%= label_tag(:user, "usuario") %>
          <%= text_field_tag(:user, nil, class: 'form-control input-lg') %>
        </div>
        <div class="form-group">
          <%= label_tag(:password, "ContraseÃ±a") %>
          <%= password_field_tag(:password, nil, class: 'form-control input-lg') %>
        </div>
        <div class="text-right"><%= submit_tag("Ingresar", class: 'btn btn-primary btn-lg btn-block') %></div>
      <% end %>
    </div>
  </div>
</div>